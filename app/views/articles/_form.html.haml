= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title, autofocus: true
  .field
    = f.label :category_id
    %br/
    = f.collection_select :category_id, Category.all, :id, :name
  .field
    = f.label :status
    %br/
    = f.select :status, Article.statuses.keys
  .field
    = f.label :visibility
    %br/
    = f.select :visibility, Article.visibilities.keys
  .field
    = f.label :article_type
    %br/
    = f.select :article_type, Article.article_types.keys
  .field
    = f.label :content
    %br/
    = f.rich_text_area :content

  .actions
    = f.submit "Create"
